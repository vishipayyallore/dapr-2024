{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dapr.microservice.webapi/dapr.microservice.webapi.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/dapr.microservice.webapi/dapr.microservice.webapi.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/dapr.microservice.webapi/dapr.microservice.webapi.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "sample",
            "appPort": 5000,
            "httpPort": 5010,
            "label": "dapr-debug",
            "type": "dapr",
            // "args": [
            //     "--project ./dapr.microservice.webapi/dapr.microservice.webapi.csproj",
            //     "--urls",
            //     "\"http://+:5000\""
            // ],
            "dependsOn": "build"
        },
        {
            "appId": "sample",
            "label": "daprd-down",
            "type": "daprd-down"
        }
    ]
}